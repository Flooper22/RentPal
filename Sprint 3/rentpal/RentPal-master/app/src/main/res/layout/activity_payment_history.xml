<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paymenthistory_bg"
    tools:context=".PaymentHistory">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="51sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="338sp"
        android:layout_marginBottom="308sp"
        app:srcCompat="@drawable/filtericon" />

    <ImageView
        android:id="@+id/quickmenubtnhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="20sp"
        android:onClick="onClick"
        app:srcCompat="@drawable/quickmenuicon" />

    <ImageView
        android:id="@+id/backbtnhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19sp"
        android:layout_marginTop="18sp"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/historytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="29sp"
        android:layout_marginEnd="132sp"
        android:text="Payment History"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="294sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65sp"
        android:layout_marginTop="110sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Search for a specific payment history"
        android:textColor="#000000"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="19sp"
        android:layout_height="35sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44sp"
        android:layout_marginTop="110sp"
        app:srcCompat="@drawable/searchicon" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="87sp"
        android:layout_height="82sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="153sp"
        android:layout_marginEnd="67sp"
        app:srcCompat="@drawable/paymentmethodicon" />

    <Button
        android:id="@+id/paybtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236sp"
        android:layout_marginEnd="259sp"
        android:text="Fees"
        android:textColor="#000000"
        android:textSize="10sp"
        app:backgroundTint="#D9D9D9" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="87sp"
        android:layout_height="82sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64sp"
        android:layout_marginTop="153sp"
        app:srcCompat="@drawable/feeicon" />

    <Button
        android:id="@+id/paybtn3"
        android:layout_width="115sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236sp"
        android:layout_marginEnd="53sp"
        android:text="Payment Method"
        android:textColor="#000000"
        android:textSize="10sp"
        app:backgroundTint="#D9D9D9" />

</RelativeLayout>