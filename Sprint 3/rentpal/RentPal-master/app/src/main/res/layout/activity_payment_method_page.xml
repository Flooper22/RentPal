<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paymentmethod_bg"
    tools:context=".PaymentMethodPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="354sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26sp"
        android:layout_marginTop="289sp"
        android:text="Please Choose your Payment Method"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/methodbackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19sp"
        android:layout_marginTop="8sp"
        android:onClick="onClick"
        app:srcCompat="@drawable/backbutton" />

    <ImageView
        android:id="@+id/methodquickmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14sp"
        android:layout_marginEnd="20sp"
        app:srcCompat="@drawable/quickmenuicon" />

    <TextView
        android:id="@+id/methodtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="131sp"
        android:text="Payment Method"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>