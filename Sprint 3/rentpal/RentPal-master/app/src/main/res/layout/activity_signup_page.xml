<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signuppage_bg"
    tools:context=".SignupPage">

    <EditText
        android:id="@+id/fullnameid"
        android:layout_width="257sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13sp"
        android:layout_marginBottom="368sp"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:textColorHint="#5CB8B8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/feetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="174sp"
        android:layout_marginEnd="31sp"
        android:text="Create Account"
        android:textColor="#5CB8B8"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230sp"
        android:layout_marginTop="216sp"
        app:srcCompat="@drawable/divider" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120sp"
        android:layout_height="90sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="217sp"
        android:layout_marginBottom="486sp"
        app:srcCompat="@drawable/loginicon" />

    <EditText
        android:id="@+id/phonenumid"
        android:layout_width="257sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13sp"
        android:layout_marginBottom="317sp"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColorHint="#5CB8B8"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passid"
        android:layout_width="258sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="211sp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#5CB8B8"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="257sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13sp"
        android:layout_marginBottom="264sp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColorHint="#5CB8B8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="101sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="222sp"
        android:layout_marginBottom="152sp"
        android:text="Signup"
        android:textColor="#000000"
        app:backgroundTint="#B2DFF2" />

    <TextView
        android:id="@+id/signupid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="135sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="120sp"
        android:text="Already have an account? Login instead"
        android:textColor="#656565"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>